{
  "manifest_version": 3,
  "name": "SpamBlock",
  "version": "1.0",
  "description": "Supprime les posts avec des mots blacklistés sur Twitter et remplace les mots injurieux par des cœurs sur les autres sites.",
  "permissions": ["storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": ["https://*/*"],
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content.js"]
    }
  ]
}
